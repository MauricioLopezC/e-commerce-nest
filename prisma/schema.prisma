// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client"
  output          = "../src/generated/prisma"
  moduleFormat = "cjs"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider = "postgresql"
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  price          Decimal
  description    String
  sex            Sex      @default(UNISEX)
  unitsOnOrder   Float    @default(0)
  totalCollected Float    @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  images      Image[]
  cartItem    CartItem[]
  productSku  ProductSku[]
  favorites   Favorite[]
  orderItems  OrderItem[]
  userReviews UserReview[]
  discounts   Discount[]
  categories  Category[]
}

enum Sex {
  MALE
  FEMALE
  UNISEX
}

model ProductSku {
  id         Int         @id @default(autoincrement())
  product    Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId  Int
  size       String
  color      String
  quantity   Int
  cartItem   CartItem[]
  orderItems OrderItem[]
  images     Image[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@unique([productId, size, color])
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  products  Product[]
  discounts Discount[]
}

model Image {
  id           Int        @id @default(autoincrement())
  imgSrc       String
  product      Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId    Int
  productSkuId Int
  productSku   ProductSku @relation(fields: [productSkuId], references: [id], onDelete: Cascade)
}

model User {
  id            Int          @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String       @unique
  verifiedEmail Boolean      @default(false)
  role          Role         @default(USER)
  password      String
  isBanned      Boolean      @default(false)
  profileImage  String? // Imagen de perfil del usuario
  cart          Cart?
  favorites     Favorite[]
  order         Order[]
  userReviews   UserReview[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

enum Role {
  USER
  ADMIN
}

model UserReview {
  id          Int      @id @default(autoincrement())
  userId      Int
  productId   Int
  orderItemId Int      @unique
  score       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product   @relation(fields: [productId], references: [id])
  orderItem OrderItem @relation(fields: [orderItemId], references: [id])
}

model Cart {
  id        Int        @id @default(autoincrement())
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int        @unique //necesary for one to one relations
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  CartItem  CartItem[]
}

model CartItem {
  id           Int        @id @default(autoincrement())
  cart         Cart       @relation(fields: [cartId], references: [id], onDelete: Cascade)
  cartId       Int
  product      Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId    Int
  productSku   ProductSku @relation(fields: [productSkuId], references: [id], onDelete: Cascade)
  productSkuId Int
  quantity     Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@unique([productSkuId, cartId])
}

model Favorite {
  id        Int      @id @default(autoincrement())
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([productId, userId])
  @@map("Favorites")
}

model Order {
  id             Int         @id @default(autoincrement())
  userId         Int
  status         OrderStatus @default(IN_PROGRESS)
  total          Decimal
  discountAmount Decimal     @default(0)
  finalTotal     Decimal
  orderItems     OrderItem[]
  payment        Payment?
  shipping       Shipping?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt

  user      User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  discounts DiscountsOnOrders[]
}

enum OrderStatus {
  COMPLETED
  CANCELLED
  IN_PROGRESS
  FAILED
}

model OrderItem {
  id           Int         @id @default(autoincrement())
  orderId      Int
  productId    Int
  productSkuId Int
  quantity     Int
  price        Decimal
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  userReviews  UserReview? //for check if user has ordered that product

  order      Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product    Product    @relation(fields: [productId], references: [id], onDelete: Cascade)
  productSku ProductSku @relation(fields: [productSkuId], references: [id], onDelete: Cascade)
}

//OrderItem price it is not redundant because the price of the products
//can change while the price of the order has to remain fixed.

model Payment {
  id        Int             @id @default(autoincrement())
  orderId   Int             @unique
  provider  PaymentProvider
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

enum PaymentProvider {
  PAYPAL
  VISA
  MASTERCARD
  APPLE_PAY
  OTHER
}

model Shipping {
  id         Int      @id @default(autoincrement())
  orderId    Int      @unique
  country    String
  city       String
  postalCode String
  address    String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Discount {
  id             Int                 @id @default(autoincrement())
  name           String // Nombre del descuento (por ejemplo, "Black Friday")
  description    String? // Descripción del descuento
  discountType   DiscountType // Tipo de descuento: (PERCENTAGE, FIXED)
  value          Float // Valor del descuento (porcentaje o monto)
  startDate      DateTime // Inicio del descuento
  endDate        DateTime // Fin del descuento
  applicableTo   DiscountApplication // Nivel de aplicación (PRODUCT, CATEGORY, ORDER, GENERAL)
  orderThreshold Float? // Monto mínimo de la orden para aplicar el descuento
  maxUses        Int? // Número máximo de usos
  currentUses    Int                 @default(0) // Número actual de usos
  isActive       Boolean             @default(true)
  createdAt      DateTime            @default(now())
  updatedAt      DateTime            @updatedAt

  orders     DiscountsOnOrders[]
  products   Product[]
  categories Category[]
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum DiscountApplication {
  PRODUCT
  CATEGORY
  ORDER
  GENERAL
}

//only one DiscountCode per Order
model DiscountCode {
  id             Int      @id @default(autoincrement())
  code           String   @unique // Código único del cupón
  discountType   String // Tipo de descuento: porcentaje o monto fijo
  value          Float // Valor del descuento (porcentaje o monto fijo)
  maxUses        Int? // Número máximo de usos del cupón
  currentUses    Int      @default(0) // Usos actuales del cupón
  startDate      DateTime // Fecha de inicio del cupón
  endDate        DateTime // Fecha de expiración del cupón
  isActive       Boolean  @default(true) // Indica si el cupón está activo
  orderThreshold Float? // Valor mínimo de la orden para aplicar el cupón
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model DiscountsOnOrders {
  discountId     Int
  discount       Discount @relation(fields: [discountId], references: [id], onDelete: Cascade)
  orderId        Int
  order          Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  appliedTimes   Int
  discountAmount Float
  assignedAt     DateTime @default(now())

  @@id([discountId, orderId])
  @@map("DicountsOnOrders")
}
